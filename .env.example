# Database Configuration
# Set DATABASE_PROVIDER to 'sqlserver' to use SQL Server, or 'json' (or leave empty) for JSON file storage
DATABASE_PROVIDER=json

# SQL Server Connection String (only needed when DATABASE_PROVIDER=sqlserver)
# Format: sqlserver://SERVER:PORT;database=DATABASE_NAME;user=USERNAME;password=PASSWORD;encrypt=true;trustServerCertificate=false
# Example: sqlserver://localhost:1433;database=gmi2v;user=sa;password=YourStrong@Password;encrypt=true;trustServerCertificate=true
DATABASE_URL=

# S3 configuration (used by server-side upload)
# Example values â€” create a real .env or set environment vars in your deployment.
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=your-access-key-id
S3_SECRET_KEY=your-secret-access-key
S3_REGION=us-east-1
RUNPOD_API_KEY=your-api-key
RUNPOD_ENDPOINT_URL=video-endpoint-url
# Optional: custom S3 endpoint (for MinIO/local stacks), e.g. http://localhost:9000
S3_ENDPOINT=
